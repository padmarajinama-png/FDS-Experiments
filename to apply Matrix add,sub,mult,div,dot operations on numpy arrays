import numpy as np
arr1=np.array([(1,2),(3,4)])
print("/n First matrix:")
print(arr1)
arr2=np.array([(5,6),(7,8)])
print("/n Second  matrix:")
print(arr2)
print("/n Adding the two matrices:")
Addition=np.add(arr1,arr2)
print(Addition)
print("/n subtracting the two matrices:")
subtraction=np.subtract(arr1,arr2)
print(subtraction)
print("/n Multiplication of the two matrices:")
Multiply=np.multiply(arr1,arr2)
print(Multiply)
print("/n dividing  the two matrices:")
Division=np.subtract(arr1,arr2)
print(Division)
print("/n product of two matrices:")
Matrix=np.dot(arr1,arr2)
print(Matrix)
